    #  Jenkins Pipeline - Scheduled Build


    pipeline {
       agent any
       environment {
        INSTITUTE_NAME = "sumit-pathnex"
       }
       triggers {
          cron('H 2 * * *') // every day at 2AM
       }
       stages {
          stage('Checkout') {
	     steps  {
	        git url: 'https://github.com/sumit-pathnex/sample-java-app.git'
	     }
	 }
         stage('Build') {
	   steps {
	      sh 'mvn clean package'
	   }
	 }
       }
     }
    

    ##  GitLab CI - Scheduled Pipeline


    stages:
       - build

    build:
       stage: build
       image: maven:3.8.1-jdk-17
       script:
          - git clone https://github.com/sumit-pathnex/sample-java-app.git
	  - cd sample-java-app
	  - mvn clean package

