## ğŸ”¹ ansible â€” install & enable nginx

---
- name: install and start nginx on sumit-pathnex
  hosts: all
  become: yes

  tasks:
    - name: install nginx
      yum:
        name: nginx
        state: present

    - name: enable nginx
      service:
        name: nginx
        state: started
        enabled: yes


## ğŸ”¹ terraform â€” ec2 with tags (r5.2xlarge)

provider "aws" {
  region = "us-east-1"
}

resource "aws_instance" "sumit-pathnexEC2" {
  ami           = "ami-0abcd1234abcd1234"
  instance_type = "r5.2xlarge"

  tags = {
    name        = "sumit-pathnex Server"
    environment = "training"
    owner       = "sumit-pathnex student"
  }
}


## ğŸ”¹ kubernetes â€” deployment with 2 replicas

apiVersion: apps/v1
kind: deployment
metadata:
  name: luckypathnex-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: luckypathnex-app
  template:
    metadata:
      labels:
        app: luckypathnex-app
    spec:
      containers:
        - name: app
          image: nginx
          ports:
            - containerPort: 80


