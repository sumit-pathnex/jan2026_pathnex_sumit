## ðŸ”¹ Ansible â€” Create User

---
- name: Create sumit-pathnex user
  hosts: all
  become: yes

  tasks:
    - name: Create user sumit-pathnex-admin
      user:
        name: sumit-pathnex-admin
        shell: /bin/bash


## ðŸ”¹ Terraform â€” Security Group (r6i.4xlarge EC2)

provider "aws" {
  region = "us-east-1"
}

resource "aws_security_group" "sumit-pathnexSG" {
  name        = "sumit-pathnexSG"
  description = "sumit-pathnex SG for SSH"

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

resource "aws_instance" "sumit-pathnexEC2" {
  ami                    = "ami-0abcd1234abcd1234"
  instance_type          = "r6i.4xlarge"
  vpc_security_group_ids = [aws_security_group.PathnexSG.id]

  tags = {
    Name = "sumit-pathnex-EC2"
  }
}


## ðŸ”¹ Kubernetes â€” Add Environment Variables

apiVersion: v1
kind: Pod
metadata:
  name: sumit-pathnex-env-pod
spec:
  containers:
    - name: app
      image: nginx
      env:
        - name: APP_ENV
          value: "production"


